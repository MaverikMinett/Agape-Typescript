{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["dom","es2016"],
      "declaration": true,
      "outDir": "./dist/esm",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "allowJs": true,
      "types": ["jasmine"]
