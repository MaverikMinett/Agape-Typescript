{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["dom","es2016"],
      "declaration": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "paths": {
        "@agape/object": ["../ts/object/dist/esm"],
        "@agape/string": ["../ts/string/dist/esm"],
        "@agape/templateer": ["../ts/templateer/dist/esm"],
      }
    },
    "include": ["src/**/*", "./public_api.ts" ],
    "exclude": ["node_modules", "**/__tests__/*", "**/*.spec.ts"]
  }